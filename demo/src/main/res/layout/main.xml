<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="20dp"
	android:gravity="center_horizontal">

	<com.maxpilotto.actionedittext.ActionEditText
		android:id="@+id/firstName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:aed_label="First name *"
		app:aed_hint="Type your name ..."/>

	<com.maxpilotto.actionedittext.ActionEditText
		android:id="@+id/lastName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		app:aed_label="Last name"
		app:aed_hint="Type your surname ..."/>

	<com.maxpilotto.actionedittext.ActionEditText
		android:id="@+id/password"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		app:aed_label="Password *"
		app:aed_hint="Type your password ..."
		app:aed_inputType="PASSWORD"/>

	<com.maxpilotto.actionedittext.ActionEditText
		android:id="@+id/email"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		app:aed_label="Email *"
		app:aed_hint="Type your email ..."/>

	<Button
		android:id="@+id/confirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Register"
		android:textColor="#fff"
		android:layout_marginTop="100dp"
		style="@style/Widget.MaterialComponents.Button"/>

</LinearLayout>